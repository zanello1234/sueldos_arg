<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_payslip_form_ar_inherit" model="ir.ui.view">
        <field name="name">hr.payslip.form.ar.inherit</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[last()]" position="after">
                <button name="%(action_report_payslip_ar)d"
                        string="Imprimir Recibo AR"
                        type="action"
                        class="oe_highlight"
                        invisible="state not in ('done', 'paid')"
                        groups="hr_payroll.group_hr_payroll_user"/>
            </xpath>
            
            <xpath expr="//group[@name='accounting']" position="after">
                <group string="InformaciÃ³n de Pago Argentina" name="ar_payment_info">
                    <field name="payment_type"/>
                    <field name="bank_account_id" 
                           invisible="payment_type != '1'"
                           required="payment_type == '1'"/>
                    <field name="payment_date"/>
                    <field name="number"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
