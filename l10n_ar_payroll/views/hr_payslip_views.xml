<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_payslip_form_inherit_l10n_ar" model="ir.ui.view">
        <field name="name">hr.payslip.form.inherit.l10n.ar</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='contract_id']" position="after">
                <field name="categoria_id" readonly="1"/>
                 <field name="cct_id" readonly="1"/>
            </xpath>
            <!-- Agregar grupo para datos de pago -->
            <xpath expr="//notebook" position="inside">
                <page string="Datos de Pago">
                    <group>
                        <field name="bank_account_id"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
