<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_payslip_run_form_inherit_l10n_ar" model="ir.ui.view">
        <field name="name">hr.payslip.run.form.inherit.l10n.ar</field>
        <field name="model">hr.payslip.run</field>
        <field name="inherit_id" ref="hr_payroll.hr_payslip_run_form"/>
        <field name="arch" type="xml">
            <!-- Agregar botÃ³n en el header -->
            <xpath expr="//header" position="inside">
                <button string="Generar Libro Digital" 
                        name="action_generate_libro_digital" 
                        type="object" 
                        class="oe_highlight"
                        />
            </xpath>
            
            <!-- Agregar campos de Argentina -->
            <xpath expr="//group[1]" position="after">
                <group>
                    <group string="Datos de LiquidaciÃ³n">
                        <field name="liquidation_type"/>
                        <field name="presentation_date"/>
                        <field name="payment_date"/>
                    </group>
                    <group string="Leyes Sociales">
                        <field name="social_security_deposit_date"/>
                        <field name="social_security_period_date"/> <!-- New field added here -->
                        <field name="deposit_bank_id"/>
                    </group>
                </group>
            </xpath>
            
            <!-- Agregar campos del Libro Digital -->
            <xpath expr="//sheet" position="inside">
                <group string="Libro Digital" invisible="state != 'close'">
                    <field name="libro_sueldos_digital" filename="libro_sueldos_filename"/>
                    <field name="libro_sueldos_filename" invisible="1"/>
                    <field name="libro_sueldos_estado"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
