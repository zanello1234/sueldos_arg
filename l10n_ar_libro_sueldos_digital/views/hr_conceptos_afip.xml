<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_conceptos_afip_form" model="ir.ui.view">
        <field name="name">hr.conceptos.afip.form</field>
        <field name="model">hr.conceptos.afip</field>
        <field name="arch" type="xml">
            <form string="Conceptos AFIP">
                <sheet>
                    <group>
                        <field name="codigo"/>
                        <field name="descripcion"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hr_conceptos_afip_tree" model="ir.ui.view">
        <field name="name">hr.conceptos.afip.tree</field>
        <field name="model">hr.conceptos.afip</field>
        <field name="arch" type="xml">
            <tree string="Conceptos AFIP">
                <field name="codigo"/>
                <field name="descripcion"/>
            </tree>
        </field>
    </record>
        
    <record id="action_hr_conceptos_afip" model="ir.actions.act_window">
        <field name="name">Conceptos AFIP</field>
        <field name="res_model">hr.conceptos.afip</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>