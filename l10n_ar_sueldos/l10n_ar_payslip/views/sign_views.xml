<odoo>
    <!-- Vista del formulario para los recibos de sueldo -->
    <record id="view_hr_payslip_signature" model="ir.ui.view">
        <field name="name">hr.payslip.signature.form</field>
        <field name="model">hr.payslip</field>
        <field name="arch" type="xml">
            <form string="Recibo de Sueldo para Firma">
                <sheet>
                    <group>
                        <!-- Agregar el campo company_id -->
                        <field name="company_id" />
                        <field name="employee_id"/>
                        <field name="date_from"/>
                        <field name="date_to"/>
                        <field name="amount_total"/>
                    </group>
                    <group>
                        <button name="action_send_for_signature" string="Enviar para Firma" type="object" class="btn-primary"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de lista para visualizar los recibos de sueldo con firma pendiente -->
    <record id="view_hr_payslip_signature_tree" model="ir.ui.view">
        <field name="name">hr.payslip.signature.tree</field>
        <field name="model">hr.payslip</field>
        <field name="arch" type="xml">
            <tree>
                <field name="employee_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="amount_total"/>
                <field name="status"/> <!-- Puede ser "Pendiente de Firma", "Firmado", etc. -->
            </tree>
        </field>
    </record>

<record id="view_hr_payslip_form" model="ir.ui.view">
    <field name="name">hr.payslip.form</field>
    <field name="model">hr.payslip</field>
    <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
    <field name="arch" type="xml">
        <!-- Encuentra el botÃ³n 'Print' en la vista usando el atributo 'name' -->
        <xpath expr="//button" position="after">
            <!-- AquÃ­ va la nueva vista o contenido que deseas insertar -->
            <button name="action_send_for_signature" string="Enviar para Firma" type="object" class="btn-primary"/>            
        </xpath>
    </field>
</record>


</odoo>