<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Definición de la acción del wizard -->
    <record id="action_salary_update_wizard" model="ir.actions.act_window">
        <field name="name">Actualizar Salario</field>
        <field name="res_model">salary.update.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Vista form del wizard -->
    <record id="view_salary_update_wizard_form" model="ir.ui.view">
        <field name="name">salary.update.wizard.form</field>
        <field name="model">salary.update.wizard</field>
        <field name="arch" type="xml">
            <form string="Actualización de Salario">
                <sheet>
                    <group>
                        <group>
                            <field name="categoria_id" options="{'no_create': True, 'no_open': True}" />
                            <field name="basic_salary"/>
                        </group>
                        <group>
                            <field name="homologation_date"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Confirmar" name="action_confirm" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
