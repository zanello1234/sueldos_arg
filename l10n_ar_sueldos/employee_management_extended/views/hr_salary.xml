<odoo>
    <record id="action_hr_salary" model="ir.actions.act_window">
        <field name="name">Salaries</field>
        <field name="res_model">hr.salary</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
    </record>

    <record id="view_hr_salary_tree" model="ir.ui.view">
        <field name="name">hr.salary.tree</field>
        <field name="model">hr.salary</field>
        <field name="arch" type="xml">
            <tree string="Salaries">
                <field name="category_id"/>
                <field name="category_cct_id" readonly="1"/>
                <field name="basic_salary"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="homologation_date"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_salary_form" model="ir.ui.view">
        <field name="name">hr.salary.form</field>
        <field name="model">hr.salary</field>
        <field name="arch" type="xml">
            <form string="Salary">
                <group>
                    <field name="category_id"/>
                    <field name="category_cct_id" readonly="1"/>
                    <field name="basic_salary"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="homologation_date"/>
                    <field name="active"/>
                </group>
            </form>
        </field>
    </record>
</odoo>
