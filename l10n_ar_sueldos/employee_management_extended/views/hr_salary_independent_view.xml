<odoo>
    <!-- Define a new action for the independent salary view -->
    <record id="action_hr_salary_independent" model="ir.actions.act_window">
        <field name="name">Escalas salariales</field>
        <field name="res_model">hr.salary</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Define the tree view for the independent salary -->
    <record id="view_hr_salary_tree_independent" model="ir.ui.view">
        <field name="name">hr.salary.tree.independent</field>
        <field name="model">hr.salary</field>
        <field name="arch" type="xml">
            <tree string="Salaries Independent">
                <field name="category_id"/>
                <field name="basic_salary"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="homologation_date"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Define the form view for the independent salary -->
    <record id="view_hr_salary_form_independent" model="ir.ui.view">
        <field name="name">hr.salary.form.independent</field>
        <field name="model">hr.salary</field>
        <field name="arch" type="xml">
            <form string="Salary Independent">
                <group>
                    <field name="category_id"/>
                    <field name="basic_salary"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="homologation_date"/>
                    <field name="active"/>
                </group>
            </form>
        </field>
    </record>

</odoo>
