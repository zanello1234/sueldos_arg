<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de árbol (lista) -->
    <record id="view_hr_situacion_revista_tree" model="ir.ui.view">
        <field name="name">hr.situacion.revista.tree</field>
        <field name="model">hr.situacion.revista</field>
        <field name="arch" type="xml">
            <tree string="Situaciones de Revista">
                <field name="code"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Vista de formulario -->
    <record id="view_hr_situacion_revista_form" model="ir.ui.view">
        <field name="name">hr.situacion.revista.form</field>
        <field name="model">hr.situacion.revista</field>
        <field name="arch" type="xml">
            <form string="Situación de Revista">
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de búsqueda -->
    <record id="view_hr_situacion_revista_search" model="ir.ui.view">
        <field name="name">hr.situacion.revista.search</field>
        <field name="model">hr.situacion.revista</field>
        <field name="arch" type="xml">
            <search string="Situaciones de Revista">
                <field name="code"/>
                <field name="name"/>
                <group expand="0" string="Agrupar Por">
                    <filter name="group_by_code" string="Código" domain="[]" context="{'group_by': 'code'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción de menú -->
    <record id="action_hr_situacion_revista" model="ir.actions.act_window">
        <field name="name">Situaciones de Revista</field>
        <field name="res_model">hr.situacion.revista</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_hr_situacion_revista_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay situaciones de revista definidas
            </p>
            <p>
                Cree su primera situación de revista.
            </p>
        </field>
    </record>

    <!-- Elemento de menú -->
    <menuitem id="menu_hr_situacion_revista"
              name="Situaciones de Revista"
              action="action_hr_situacion_revista"
              parent="hr.menu_human_resources_configuration"
              sequence="101"/>
</odoo>
