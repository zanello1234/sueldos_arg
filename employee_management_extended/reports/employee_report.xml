<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_employee">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="employee">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 class="text-center">Ficha del Empleado</h2>
                        
                        <!-- Información Básica -->
                        <div class="row mt-4">
                            <div class="col-6">
                                <strong>Nombre:</strong> <span t-field="employee.name"/>
                            </div>
                            <div class="col-6">
                                <strong>Legajo:</strong> <span t-field="employee.legajo"/>
                            </div>
                        </div>

                        <!-- Información Laboral -->
                        <h4 class="mt-4">Información Laboral</h4>
                        <div class="row">
                            <div class="col-4">
                                <strong>Convenio:</strong>
                                <p t-field="employee.convenio"/>
                            </div>
                            <div class="col-4">
                                <strong>Categoría:</strong>
                                <p t-field="employee.categoria"/>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-4">
                                <strong>Fecha de Ingreso:</strong>
                                <p t-field="employee.fecha_ingreso"/>
                            </div>
                            <div class="col-4">
                                <strong>Jornada Laboral:</strong>
                                <p t-field="employee.jornada_laboral"/>
                            </div>
                            <div class="col-4">
                                <strong>Estado:</strong>
                                <p t-field="employee.status"/>
                            </div>
                        </div>

                        <!-- ART y Obra Social -->
                        <h4 class="mt-4">ART y Obra Social</h4>
                        <div class="row">
                            <div class="col-4">
                                <strong>ART:</strong>
                                <p t-field="employee.art"/>
                            </div>
                            <div class="col-4">
                                <strong>Obra Social:</strong>
                                <p t-field="employee.obra_social"/>
                            </div>
                            <div class="col-4">
                                <strong>Compañía Aseguradora:</strong>
                                <p t-field="employee.compania_aseguradora"/>
                            </div>
                        </div>

                        <!-- Información Sindical -->
                        <h4 class="mt-4">Información Sindical</h4>
                        <div class="row">
                            <div class="col-6">
                                <strong>Sindicado:</strong>
                                <p t-field="employee.sindicado"/>
                            </div>
                            <div class="col-6" t-if="employee.sindicado">
                                <strong>Sindicato:</strong>
                                <p t-field="employee.sindicato"/>
                            </div>
                        </div>

                        <!-- Alta Temprana -->
                        <h4 class="mt-4">Alta Temprana</h4>
                        <div class="row">
                            <div class="col-4">
                                <strong>Modalidad:</strong>
                                <p t-field="employee.modalidad"/>
                            </div>
                            <div class="col-4">
                                <strong>Clave:</strong>
                                <p t-field="employee.clave"/>
                            </div>
                            <div class="col-4">
                                <strong>Fecha Presentación:</strong>
                                <p t-field="employee.presentacion"/>
                            </div>
                        </div>

                        <!-- Fechas Importantes -->
                        <h4 class="mt-4">Fechas Importantes</h4>
                        <div class="row">
                            <div class="col-4" t-if="employee.fecha_egreso">
                                <strong>Fecha de Egreso:</strong>
                                <p t-field="employee.fecha_egreso"/>
                            </div>
                            <div class="col-4" t-if="employee.fecha_accidente">
                                <strong>Fecha de Accidente:</strong>
                                <p t-field="employee.fecha_accidente"/>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
