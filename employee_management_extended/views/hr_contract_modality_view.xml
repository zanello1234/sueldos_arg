<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Action -->
    <record id="hr_modality_extension_action_hr_contract_modality" model="ir.actions.act_window">
        <field name="name">Modalidades de Contrato</field>
        <field name="res_model">hr.contract.modality</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Views -->
    <record id="view_hr_contract_modality_tree" model="ir.ui.view">
        <field name="name">hr.contract.modality.tree</field>
        <field name="model">hr.contract.modality</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_contract_modality_form" model="ir.ui.view">
        <field name="name">hr.contract.modality.form</field>
        <field name="model">hr.contract.modality</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
